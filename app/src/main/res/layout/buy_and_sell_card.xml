<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_height=""
    layout_width=""
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="#856969"
    android:clickable="true"
    android:elevation="25dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A5E0E8"
            android:clickable="true"
            android:fontFamily="@font/cormorant_garamond_semibold"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/phnNumber_buyAndSell"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#D9F0F3"
            android:elevation="10dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clickable="true"
            android:elevation="15dp"
            android:fontFamily="@font/cormorant_sc_medium"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E3E3EA"
                android:fontFamily="@font/actor"
                android:paddingTop="5dp"
                android:text="Price \u20B9 : "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E3E3EA"
                android:fontFamily="@font/actor"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0C2EEC"
                android:backgroundTint="#3653F6"
                android:fontFamily="@font/actor"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:text="BUY"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>